generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String?      @db.VarChar(255)
  email      String       @unique(map: "email") @db.VarChar(255)
  password   String?      @db.VarChar(255)
  role       String?      @db.VarChar(255)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Peminjaman Peminjaman[]
  PeminjamanBuku  PeminjamanBuku[]

  @@map("users")
}

model Buku {
  id         Int          @id @default(autoincrement())
  judul      String?      @db.VarChar(255)
  penulis    String       @db.VarChar(255)
  penerbit   String?      @db.VarChar(255)
  tahun      Int?
  kategori   String?      @db.VarChar(255)
  deskripsi  String?      @db.VarChar(255)
  foto       String?      @db.VarChar(255)
  stok       Int          @default(0)
  status     StatusBuku   @default(tersedia)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Peminjaman Peminjaman[]
  PeminjamanBuku  PeminjamanBuku[]

  @@map("buku")
}

enum StatusBuku {
  tersedia
  dipinjam
}

model Peminjaman {
  id                   Int              @id @default(autoincrement())
  id_buku              Int
  id_user              Int
  tanggal_peminjaman   DateTime         @default(now())
  tanggal_pengembalian DateTime?
  status               StatusPeminjaman @default(BELUM_DIKEMBALIKAN)

  // relasi ke tabel buku
  buku Buku @relation(fields: [id_buku], references: [id])

  // relasi ke tabel users
  users User @relation(fields: [id_user], references: [id])

  PeminjamanBuku  PeminjamanBuku[]

  @@map("peminjaman")
}

enum StatusPeminjaman {
  BELUM_DIKEMBALIKAN
  SUDAH_DIKEMBALIKAN
}

model PeminjamanBuku {
  id Int @id @default(autoincrement())
  id_user Int
  id_buku Int
  id_peminjaman Int

  buku Buku @relation(fields: [id_buku], references: [id])

  users User @relation(fields: [id_user], references: [id])

  peminjaman Peminjaman @relation(fields: [id_peminjaman], references: [id])

  @@map("peminjamanBuku")
}
